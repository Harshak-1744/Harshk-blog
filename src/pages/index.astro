---
	import Main from "../layouts/Main.astro";
	import Cards from "../components/Cards.astro";

	const profile_picture = "https://i.pinimg.com/550x/2b/b9/73/2bb973e9f4bb59092a1a20e125be7781.jpg";

	const blogs = await Astro.glob("../pages/blogs/*.md")

---

<Main title = "Harshk">
	<div class="profile">
		<img 
			alt="Harshk's Website" 
			width="100px"
			height="100px"
			class="profile_picture"
			src={profile_picture}
		/>
	<div class="profile_detials">
		<h1>Harshk</h1>
		<h2>Let's Explore..!</h2>
		<p>Unveiling the past, Mastering the present, and Shaping the future</p>
	</div>
	</div>

	<Cards cards={[
		{
			title: "Discover Origins",
			gradientFrom: "#818cf8",
			gradientTo: "#d8b4fe",
			to: "/origins", 
		},
		{
			title: "Understanding Intelligence Mechanics",
			gradientFrom: "#fde68a",
			gradientTo: "#fca5a5",
			to: "/beyond-algo", 
		},
		{
			title: "AI-Powered Global Initiatives",
			gradientFrom: "#6ee7b7",
			gradientTo: "#9333ea",
			to: "/ai", 
		},
	]}/>

<div class="featured-blogs">
    <h3 class="featured-blogs__title">Featured Blogs</h3>
    <p class="featured-blogs__description">
      Opinion pieces that will change everything you know..!.
    </p>
  </div>

  <ol class="blogs">
    <li class="blogs__list">
      <a href="blogs/origin-of-music" class="blog__link"
        >Origin of Music</a
      >
    </li>

    <li class="blogs__list">
      <a href="/blogs/understanding-machines" class="blog__link"
        >Understanding Machines</a
      >
    </li>

    <li class="blogs__list">
      <a href="/blogs/autonomous-vehicles" class="blog__link"
        >Autonomous Vehicles</a
      >
    </li>
  </ol>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}
	
	.profile_detials {
		flex: 1 0 300px;
	}

	.profile_detials > h1 {
		margin-top: 0;
	}

	.profile_picture {
		border-radius: 20%;
		margin: 0 2rem 1rem 0;
	}
	.featured-blogs {
    margin: 0;
    padding: 3rem 0 0 0;
  }
  .featured-blogs__title {
    font-size: 2rem;
    color: var(--gray-900);
  }

  .featured-blogs__description {
    margin-top: -1.2rem;
  }

  .blogs {
    font-size: 1rem;
    font-weight: 500;
  }

  .blogs__list {
    border-bottom: 1px solid;
    border-color: var(--gray-200);
  }

  .blog__link {
    opacity: 1;
    height: 100%;
    display: block;
    padding: 1rem 0;
    color: var(--gray-200);
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;
  }

  .blog__link:hover {
    opacity: 0.7;
  }
	
</style>
