---
	import Main from "../layouts/Main.astro";
	import Cards from "../components/Cards.astro";
	const profile_picture = "https://i.pinimg.com/550x/2b/b9/73/2bb973e9f4bb59092a1a20e125be7781.jpg";
---

<Main title = "Harshk">
	<div class="profile">
		<img 
			alt="Harshk's Website" 
			width="100px"
			height="100px"
			class="profile_picture"
			src={profile_picture}
		/>
	<div class="profile_detials">
		<h1>Harshk</h1>
		<h2>Let's Explore..!</h2>
		<p>Unveiling the past, Mastering the present, and Shaping the future</p>
	</div>
	</div>

	<Cards cards={[
		{
			title: "Discover Origins",
			gradientFrom: "#818cf8",
			gradientTo: "#d8b4fe",
			to: "/origins", 
		},
		{
			title: "Understanding Intelligence Mechanics",
			gradientFrom: "#fde68a",
			gradientTo: "#fca5a5",
			to: "/beyond-algo", 
		},
		{
			title: "AI-Powered Global Initiatives",
			gradientFrom: "#6ee7b7",
			gradientTo: "#9333ea",
			to: "/ai", 
		},

	]}/>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}
	
	.profile_detials {
		flex: 1 0 300px;
	}

	.profile_detials > h1 {
		margin-top: 0;
	}

	.profile_picture {
		border-radius: 20%;
		margin: 0 2rem 1rem 0;
	}
	
</style>
